<%- include("./partials/head", { title: "Edit Blog" }) %>

<%- include('./css/edit-blog') %>
<body>
    <h1>Edit Blog</h1>
    <form action="/update-blog/<%= blog._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= blog.title %>" required>
        </div>
        <div>
            <label for="body">Body</label>
            <textarea id="body" name="body" rows="10" required><%= blog.body %></textarea>
        </div>
        <div>
            <label for="coverImageURL">Cover Image URL (optional)</label>
            <input type="text" id="coverImageURL" name="coverImageURL" value="<%= blog.coverImageURL %>">
        </div>
        <button type="submit">Update Blog</button>
    </form>
    <div class="back-link-container">
        <a href="/my-blogs" class="back-link">Back to My Blog</a>
    </div>
</body>
