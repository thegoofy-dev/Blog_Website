<%- include("../css/nav") %>
<nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" style="height: 65px;" data-bs-theme="dark">
  <div class="container-fluid">
    
    <!-- Branding or logo link -->
    <a class="navbar-brand mx-3" href="/home">BlogWaves</a>
    
    <!-- Navbar toggler button for mobile view -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar content that collapses in mobile view -->
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/home">Home</a>
        </li>

        <!-- Conditional links for authenticated users -->
        <% if (locals.user) { %>
          <li class="nav-item mx-3">
            <a class="nav-link" href="/blog/add-new">Add Blog</a>
          </li>
        <% } %>

        <!-- Conditional links for unauthenticated users -->
        <% if (!locals.user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/user/signin">Sign In</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/signup">Create Account</a>
          </li>
        <% } %>
      </ul>

      <!-- User profile section for authenticated users -->
      <% if (locals.user) { %>
        <ul class="navbar-nav ms-auto d-flex align-items-center mx-3">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="<%= user.profileImageURL %>" alt="Profile" class="rounded-circle me-2" width="28" height="28">
              <span class="nav-link-text"><%= user.fullName %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
            </ul>
          </li>
        </ul>
      <% } %>

    </div>
  </div>
</nav>

<!-- Display error message if present -->
<% if (locals.error) { %>
  <div class="container mt-4">
    <div class="alert alert-danger" role="alert">
      <%= locals.error %>
    </div>
  </div>
<% } %>
