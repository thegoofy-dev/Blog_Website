<%- include("./partials/head", { title: "Home Page" }) %>
<%- include("./css/home", { title: "Home Page" }) %>

<body>
  <!-- Include navigation bar -->
  <%- include("./partials/nav") %>

  <div class="container mt-3">
    <!-- Blog posts grid layout -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
      <% blog.forEach(blog => { %>
        <div class="col">
          <!-- Blog card -->
          <div class="card h-100">
            <!-- Blog cover image -->
            <img src="<%= blog.coverImageURL %>" style="width: 100%; height: 200px; object-fit: cover;" alt="<%= blog.title %>">
            <div class="card-body d-flex flex-column">
              <!-- Blog title -->
              <h5 class="card-title">
                <%= blog.title %>
              </h5>
              <!-- Link to view the full blog post -->
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View...</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  
  <!-- Include scripts for additional functionality -->
  <%- include("./partials/scripts") %>
</body>

</html>
