<%- include("./partials/head", { title: "BlogWaves" }) %>
<%- include("./css/home") %>

<body>
  <!-- Include navigation bar -->
  <%- include("./partials/nav") %>

  <div class="container mt-3 text-center">
    <h1 class="mt-4" style="font-size: 2.5rem;">BlogWaves</h1>

    <!-- Blog posts grid layout -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
      <% blog.forEach(blog => { %>
        <div class="col">
          <div class="card h-100">
            <img src="<%= blog.coverImageURL %>" style="width: 100%; height: 200px; object-fit: cover;" alt="<%= blog.title %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View...</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  
  <%- include("./partials/scripts") %>
</body>

</html>
